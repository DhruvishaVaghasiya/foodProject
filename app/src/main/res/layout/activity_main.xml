<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtView"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginLeft="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_75sdp"
        android:background="@drawable/round_bg_layout" />

    <ImageView
        android:id="@+id/sushiImg"
        android:layout_width="@dimen/_400sdp"
        android:layout_height="@dimen/_220sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:src="@drawable/sushiimg" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtView"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Delicious Food"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:gravity="center"
            android:text="We  help  you  to  find  best  an  delicious  food"
            android:textSize="@dimen/_16sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_10sdp"
                android:background="@drawable/round_bg_layout" />

            <TextView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_7sdp"
                android:background="@drawable/bg_layout" />

            <TextView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:background="@drawable/bg_layout" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/startBtn"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_90sdp"
            android:background="@drawable/round_bg_layout"
            android:text="get started"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

    </LinearLayout>
</RelativeLayout>